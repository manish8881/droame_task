<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <!-- Bootstrap Link -->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
      <!-- Css link -->
      <link rel="stylesheet" href="/style2.css">
    <title>Booking System</title>
</head>
<body>
  <% if(found == 0){ %>
    <div id="message">
        <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
            <%= alertMessage %>
        </div> 
    </div>
<% } %> 
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Booking System</a>
        </div>
        <div class="action">
            <div class="profile" onclick="menu();">
                <img src="/images/user.png" alt="">
            </div>
            <div class="menu">
                <ul>
                  <li><a href="/">Home</a></li>
                  <li><a href="/create-Customer">Create Customer</a></li>
                  <li><a href="/create-product">Create Booking</a></li>
                </ul>
            </div>
        </div>
      </nav>
      <!-- Main body -->
      <div class="create">
        <h1>Create Customer</h1>
        <form class="row g-3" action="/create-Customer" method="post">
            <div class="col-12">
              <input type="text" class="form-control" id="Cname" name="cid" placeholder="Enter Customer_id" autocomplete="off" required>
            </div>
            <div class="col-12">
              <input type="text" class="form-control" id="ImageUrl" name="cname" placeholder="Enter Customer name" autocomplete="off" required>
            </div>
            <div class="col-12">
              <input type="email" class="form-control" id="ImageUrl" name="cemail" placeholder="Email" autocomplete="off" required>
            </div>
            <div class="col-12">
              <input type="number" class="form-control" id="ImageUrl" name="cnumber" placeholder="Contact number" autocomplete="off" required>
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary ">Create </button>
            </div>
          </form>
    </div>
</body>
<script>
    function menu(){
        const toogleMenu=document.querySelector('.menu')
        toogleMenu.classList.toggle('active')
    }
</script>
</html>